{
  "manifest_version": 3,
  "name": "[PRE]fixed â€“ Tab Title Prefixer",
  "version": "4.0.1",
  "description": "Readable, prioritised prefixes for browser tabs.",

  "permissions": ["storage", "tabs"],

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["manager.html"],
      "matches": ["<all_urls>"]
    }
  ]
}